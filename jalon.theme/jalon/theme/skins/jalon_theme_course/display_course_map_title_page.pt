<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="jalon.content">

<body>

<metal:main fill-slot="content"
            tal:define="mode_etudiant request/mode_etudiant | string:false;
                        my_view_attributes python:context.getDisplayCourseMapAttributes(user, mode_etudiant);
                        course_link context/absolute_url;
                        course_title request/course_title | string:all;
                        my_view python:context.getCourseMapAjax(course_title, user.getId(), my_view_attributes);
                        course_map my_view/course_map;">

    <metal:macro use-macro="context/course_map_macro/macros/display_course_map">
        Affichage du plan du cours
    </metal:macro>

    <script charset="UTF-8"
            tal:content="structure string:expandPlanChapters()"></script>

</metal:main>

</body>

</html>