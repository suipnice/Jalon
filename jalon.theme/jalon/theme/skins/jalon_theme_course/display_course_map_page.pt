<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="jalon.content">

<body>

<metal:main fill-slot="content"
            tal:define="my_view python:context.getDisplayCourseMapAttributes(user);
                        course_map python:context.getCourseMap(user.getId(), my_view['is_personnel'], my_view['course_news']['listeActu'], my_view['portal']);
                        expand_titre python:True">

    <metal:macro use-macro="context/course_map_macro/macros/display_course_map">
        Affichage du plan du cours
    </metal:macro>

</metal:main>

</body>

</html>