<metal:macro define-macro="deposit-list">
    <metal:macro use-macro="context/deposit_box_macro/macros/deposit-list">
        Page d'affichage de la liste des dépôts
    </metal:macro>
</metal:macro>

<metal:macro define-macro="peers-list">
    <metal:macro use-macro="context/deposit_box_macro/macros/peers-list">
        Page d'affichage de la liste des évaluations par les pairs
    </metal:macro>
</metal:macro>

<metal:macro define-macro="skills-list">
    <metal:macro use-macro="context/deposit_box_macro/macros/skills-list">
        Page d'affichage de la liste des compétences
    </metal:macro>
</metal:macro>

<metal:macro define-macro="exercices-list">
    <metal:macro use-macro="context/wims_activity_macro/macros/liste-exercices">
        Page d'affichage de la liste des exercices
    </metal:macro>
</metal:macro>

<metal:macro define-macro="results-list" tal:define="activity_type my_view/activity_type">
    <tal:condition condition="python:activity_type=='AutoEvaluation'">
        <metal:macro use-macro="context/wims_activity_macro/macros/resultats-auto">
            Page d'affichage des résultats d'un entrainement WIMS
        </metal:macro>
    </tal:condition>
    <tal:condition condition="python:activity_type=='Examen'">
        <metal:macro use-macro="context/wims_activity_macro/macros/resultats-exam">
            Page d'affichage des résultats d'un examen WIMS
        </metal:macro>
    </tal:condition>
</metal:macro>

<metal:macro define-macro="documents-list">
<tal:condition condition="my_view/is_personnel">
    <a class="button small radius dropdown right show-for-medium-up" data-options="align:bottom" data-dropdown="add-space_el">
        <i class="fa fa-plus-circle"></i>
        <tal:block i18n:translate="">Ajouter</tal:block>
    </a>
    <ul id="add-space_el" class="f-dropdown" data-dropdown-content="data-dropdown-content">
        <li tal:repeat="menu_adder_item my_view/documents_add">
            <a tal:attributes="href menu_adder_item/item_link"
               data-reveal-id="reveal-main" data-reveal-ajax="true">
                <i tal:attributes="class menu_adder_item/item_icon"></i>
                <tal:replace replace="menu_adder_item/item_name" i18n:translate=""/>
            </a>
        </li>
    </ul>
</tal:condition>
    <h2>
        <i class="fa fa-upload"></i>
        <tal:block i18n:translate="">Documents enseignants</tal:block>
    </h2>
    <div class="panel callout radius"
         tal:condition="not:my_view/documents_list"
         i18n:translate="">
        Aucun document enseignant n'est disponible.
    </div>
    <div class="panel callout radius"
         tal:condition="my_view/documents_list">
        <div tal:repeat="document my_view/documents_list">
            <tal:condition condition="my_view/is_personnel">
            <a class="dropdown right" data-options="align:left"
               tal:attributes="data-dropdown string:${document/document_drop_id}">
                <i class="fa fa-cog fa-fw fa-lg no-pad"></i>
            </a>
            <ul class="f-dropdown" data-dropdown-content="data-dropdown-content"
                tal:attributes="id string:${document/document_drop_id}">
                <li tal:repeat="document_action document/document_actions">
                    <a data-reveal-ajax="true" data-reveal-id="reveal-main"
                       tal:define="home_link my_view/deposit_box_link | my_view/activity_link"
                       tal:attributes="href string:${home_link}/${document_action/item_action_id}?item_id=${document/document_id}">
                        <i tal:attributes="class document_action/item_action_icon"></i>
                        <tal:replace tal:replace="document_action/item_action_name" i18n:translate=""/>
                    </a>
                </li>
            </ul>
            </tal:condition>
            <i tal:attributes="class document/is_display_item_icon;
                               title document/is_display_item_text"
               tal:condition="not:document/is_display_item_bool"></i>
            <a title="Voir le document enseignant"
               data-reveal-id="reveal-main" data-reveal-ajax="true"
               tal:attributes="href document/document_link"
               i18n:attributes="title">
                <tal:replace replace="document/document_title" />
            </a>
        </div>
    </div>
</metal:macro>