<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="jalon.content">

<body>

<metal:main fill-slot="content"
            tal:define="errors options/state/getErrors | nothing;">

    <h2 i18n:translate="">
        <tal:block i18n:translate="">Ajouter un critère d'évaluation</tal:block>
        <a class="close-reveal-modal"></a>
    </h2>
    <form id="js-addCriteria" method="post"
          tal:attributes="action string:${context/absolute_url}/${template/id}">

        <div id="archetypes-fieldname-title"
             tal:define="error errors/title | nothing;"
             tal:attributes="class python:context.test(error, 'field error', 'field')">

            <label for="title" i18n:translate="">Titre</label>
            <div class="fieldErrorBox" tal:content="error"
                 tal:condition="error"/>
            <input type="text" id="title" name="title" required="required"
                   placeholder="Saisie obligatoire" maxlength="255" size="30"
                   tal:attributes="value request/title | nothing"
                   i18n:attributes="placeholder"/>
        </div>

        <div tal:define="error errors/description | nothing;"
             tal:attributes="class python:context.test(error, 'field error', 'field')">
            <label for="description" i18n:translate="">Description :</label>
            <div class="fieldErrorBox" tal:condition="error" tal:content="error" />
            <textarea id="description" name="description" rows="5"
                      required="required" placeholder="Saisie obligatoire"
                      tal:content="request/description | nothing"
                      i18n:attributes="placeholder" />
        </div>

        <div id="archetypes-fieldname-notation"
             tal:define="error errors/notation | nothing;"
             tal:attributes="class python:context.test(error, 'field error', 'field')">

            <label for="notation" i18n:translate="">Noter sur (max 10 points)</label>
            <div class="fieldErrorBox" tal:content="error"
                 tal:condition="error"/>
            <input type="number" name="notation" min="1" max="10"
                   step="1" style="width:3em;display:inline;"
                   tal:attributes="class python:context.test(error, 'error', '');
                                   value request/notation | string:10"/>
        </div>

        <div id="archetypes-fieldname-coefficient"
             tal:define="error errors/coefficient | nothing;"
             tal:attributes="class python:context.test(error, 'field error', 'field')">

            <label for="coefficient" i18n:translate="">Coefficient (max 5)</label>
            <div class="fieldErrorBox" tal:content="error"
                 tal:condition="error"/>
            <input type="number" name="coefficient" min="1" max="5"
                   step="1" style="width:3em;display:inline;"
                   tal:attributes="class python:context.test(error, 'error', '');
                                   value request/coefficient | string:1"/>
        </div>

        <input type="hidden" name="form.submitted" value="1"/>
        <input type="hidden" name="tab" value="peers"/>
        <input type="hidden" name="validate_key" value="add_criteria"/>

        <div class="formControls">
            <button type="submit" class="button small"
                    name="form.button.save">
                <i class="fa fa-plus-circle"></i>
                <tal:block i18n:translate="">Ajouter</tal:block>
            </button>
        </div>

    </form>

    <script charset="UTF-8"
            tal:content="structure string:setRevealFormNewPage('js-addCriteria','reveal-main')"></script>

</metal:main>

</body>

</html>