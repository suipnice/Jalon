<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="jalon.content">

<body>

<metal:main fill-slot="content"
            tal:define="errors options/state/getErrors | nothing">

    <tal:define define="breadcrumbs context/getCoursePasswordBreadcrumbs">
    <metal:macro use-macro="context/breadcrumbs_macro/macros/breadcrumbs">
        Page d'affichage du fil d'ariane
    </metal:macro>
    </tal:define>

    <main class="row" role="main" aria-labelledby="page_title">
    <h2 i18n:translate="">
        <tal:block i18n:translate="">Inscription au cours par mot de passe</tal:block>
    </h2>

    <form method="POST" name="inscription_cours" id="inform"
          tal:attributes="action string:${context/absolute_url}/${template/id}">
        <div tal:define="error errors/course_password | nothing;"
             tal:attributes="class python:context.test(error, 'field error', 'field')">
            <label for="course_password" class="texte_icone icone_information" i18n:translate="">
                Mot de passe du coursÂ :
            </label>
            <div class="fieldErrorBox" tal:condition="error" tal:content="error"/>
            <input type="text" name="course_password" required="required" placeholder="Saisie obligatoire"
                   tal:attributes="value request/course_password | nothing"
                   i18n:attributes="placeholder" />
        </div>

        <input type="hidden" name="form.submitted" value="1"/>
        <input type="hidden" name="member_id" 
                             tal:attributes="value user/getId"/>

        <div class="formControls">
            <button type="submit" class="button small radius">
                <i class="fa fa-check-circle"></i>
                <tal:block i18n:translate="">Enregistrer</tal:block>
            </button>
        </div>
    </form>
    </main>

</metal:main>

</body>

</html>