<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="jalon.content">

<body>

<metal:core fill-slot="content"
            tal:define="breadcrumbs view/getBreadcrumbs">
    <metal:macro use-macro="context/breadcrumbs_macro/macros/breadcrumbs">
        Page d'affichage du fil d'ariane
    </metal:macro>

    <main id="mes_ressources" role="main" class="row" aria-labelledby="page_title">

        <div class="small-12 columns">
            <h2>
                <i class="fa fa-folder-open fa-fw no-pad"></i>
                <tal:block i18n:translate="">Mes ressources</tal:block>
            </h2>
        </div>

        <tal:comment replace="nothing">!-- Bloc message de session --</tal:comment>
        <metal:macro use-macro="context/global_statusmessage_macro/macros/portal_message">
            Message de session
        </metal:macro>

        <tal:comment replace="nothing">!-- Bloc feedback WIMS --</tal:comment>
        <div class="small-12 columns"
             tal:condition="message"
             tal:define="message request/message | nothing">
             <metal:macro use-macro="context/macro_messages/macros/messages"></metal:macro>
        </div>

        <metal:macro use-macro="context/macro_mes_ressources_grid/macros/mes_ressources_grid">
            Grille des bulles "Mes ressources"
        </metal:macro>

    </main>

</metal:core>

</body>

</html>